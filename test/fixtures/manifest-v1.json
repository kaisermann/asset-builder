{
	"config": {
		"paths": {
			"source": "assets/",
			"dist": "dist/",
			"vendor": "vendor/"
		},
		"fileTypes": {
			"fonts": "*.{eot,otf,svg,ttc,ttf,woff,woff2}",
			"scripts": "*.js",
			"styles": "*.{css,styl,less,scss}",
			"images": "*.{jpg,jpeg,webp,png,gif}"
		}
	},
	"assets": {
		"scripts": {
			"app.js": {
				"files": [
					"scripts/**/*",
					"scripts/main.js"
				],
				"main": true,
				"vendor": []
			},
			"home.js": {
				"files": [
					"scripts/home.js"
				],
				"bower": [
					"slick.js"
				]
			},
			"noappend.js": {
				"files": [
					"../themedir/home.js"
				],
				"external": true
			},
			"jquery.js": {
				"bower": [
					"jquery"
				]
			},
			"modernizr.js": {
				"bower": [
					"modernizr.js"
				]
			}
		},
		"styles": {
			"app.css": {
				"files": [
					"styles/main.less"
				],
				"main": true
			}
		}
	}
}
