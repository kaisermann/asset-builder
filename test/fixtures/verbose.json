{
	"config": {
		"paths": {
			"source": "assets/",
			"dist": "dist/"
		}
	},
	"resources": {
		"scripts": {
			"pattern": "*.js",
			"directory": "scripts",
			"assets": {
				"app.js": {
					"files": [
						"scripts/**/*",
						"scripts/main.js"
					],
					"main": true
				},
				"external.js": {
					"files": [
						"../../noappend.js"
					],
					"external": true
				},
				"vendor.js": {
					"files": [
						"scripts/somescript.js"
					],
					"vendor": [
						"../../plugin/script.js"
					]
				},
				"jquery.js": {
					"bower": [
						"jquery"
					]
				},
				"modernizr.js": {
					"bower": [
						"modernizr"
					]
				}
			}
		},
		"styles": {
			"pattern": "*.{css,styl,less,scss}",
			"directory": "styles",
			"assets": {
				"app.css": {
					"files": [
						"styles/main.less"
					],
					"main": true
				}
			}
		}
	}
}
