{
	"config": {
		"paths": {
			"source": "assets/",
			"dist": "dist/",
			"bowerDirectory": "test/tmp/bower_components",
			"bowerJson": "test/tmp/bower.json"
		},
		"fileTypes": {
			"fonts": "*.{eot,otf,svg,ttc,ttf,woff,woff2}",
			"scripts": "*.js",
			"styles": "*.{css,styl,less,scss}",
			"images": "*.{jpg,jpeg,webp,png,gif}"
		}
	},
	"assets": {
		"scripts": {
			"app.js": {
				"files": [
					"scripts/**/*",
					"scripts/main.js"
				],
				"main": true
			},
			"external.js": {
				"files": [
					"../../noappend.js"
				],
				"external": true
			},
			"vendor.js": {
				"files": [
					"scripts/somescript.js"
				],
				"vendor": [
					"../../plugin/script.js"
				]
			},
			"jquery.js": {
				"bower": [
					"jquery"
				]
			},
			"modernizr.js": {
				"bower": [
					"modernizr"
				]
			}
		},
		"styles": {
			"app.css": {
				"files": [
					"styles/main.less"
				],
				"main": true
			}
		}
	}
}
