{
  "resources": {
    "scripts": {
      "pattern": "*.js",
      "directory": "scripts",
      "assets": {
        "app.js": {
          "files": [
						"scripts/**/*",
						"scripts/main.js"
					]
        },
        "jquery.js": {
          "bower": [
						"jquery"
					]
        },
        "modernizr.js": {
          "bower": [
						"modernizr"
					]
        }
      }
    },
    "styles": {
      "pattern": "*.css",
      "directory": "styles",
      "assets": {
        "app.css": {
          "files": [
						"styles/main.less"
					],
          "bower": [
						"bootstrap"
					]
        }
      }
    },
    "images": {
      "pattern": "*.{jpg,png,gif}",
      "directory": "images",
      "assets": {
        "/": {
          "files": [
						"images/**/*"
					]
        }
      }
    }
  }
}
