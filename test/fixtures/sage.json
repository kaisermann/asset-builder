{
	"config": {
		"paths": {
			"bowerDirectory": "test/tmp/bower_components",
			"bowerJson": "test/tmp/bower.json"
		},
		"fileTypes": {
			"fonts": "*.{eot,otf,svg,ttc,ttf,woff,woff2}",
			"scripts": "*.js",
			"styles": "*.css",
			"images": "*.{jpg,png,gif}",
			"sounds": "*.{mp3,wav}"
		}
	},
	"dependencies": {
		"scripts": {
			"app.js": {
				"files": [
					"scripts/**/*",
					"scripts/main.js"
				],
				"main": true
			},
			"jquery.js": {
				"bower": [
					"jquery"
				]
			},
			"modernizr.js": {
				"bower": [
					"modernizr"
				]
			}
		},
		"styles": {
			"app.css": {
				"files": [
					"styles/main.less"
				],
				"bower": [
					"bootstrap"
				],
				"main": true
			}
		},
		"images": {
			"*": {
				"files": [
					"images/**/*"
				]
			}
		}
	}
}
